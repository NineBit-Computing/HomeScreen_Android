<?xml version="1.0" encoding="utf-8"?>
<!--LandScape View Layout -->
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#DCE7F6"
    android:clipToPadding="false"
    tools:context=".MainActivity">


    <!-- Bottom Navigation View as a sidebar -->
    <com.google.android.material.navigationrail.NavigationRailView
        android:id="@+id/navigation_rail"
        android:layout_width="0dp"
        android:layout_height="415dp"
        android:paddingTop="70dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.496"
        app:menu="@menu/nav_menu" />  <!--  Bottom Bar Navigation Menu Icons Files-->


    <!-- ScrollView to make content scrollable -->
    <ScrollView
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/navigation_rail"
        app:layout_constraintTop_toTopOf="parent">

        <!-- The entire content inside the ScrollView -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">


            <!-- Search Bar Component Layout -->
            <com.google.android.material.search.SearchBar
                android:id="@+id/search_bar"
                android:layout_width="match_parent"
                android:layout_height="34dp"
                android:hint="Search" />


            <!-- Categories Title Text -->
            <TextView
                android:id="@+id/textView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="Categories"
                android:textAlignment="viewStart"
                android:textColor="#06367A"
                android:textSize="16sp"
                android:textStyle="bold" />


            <!--Horizontal Layout For Categories -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:orientation="horizontal">

                <!--  Categories Section -> Pictures File Component Layout  -->
                <LinearLayout
                    android:id="@+id/linearLayout1"
                    android:layout_width="115dp"
                    android:layout_height="92dp"
                    android:layout_marginEnd="16dp"
                    android:background="#9E9DE8"
                    android:orientation="vertical">
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/baseline_camera_alt_24" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="16dp"
                        android:text="Pictures"
                        android:textAlignment="center"
                        android:textAppearance="?attr/textAppearanceBodyMedium"
                        android:textColor="?android:attr/textColorSecondary"
                        android:textStyle="bold" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="480 files"
                        android:textAlignment="center"
                        android:textAppearance="?attr/textAppearanceBodyMedium"
                        android:textStyle="bold" />
                </LinearLayout>


                <!--    Categories Section -> Documents File Component Layout-->
                <LinearLayout
                    android:id="@+id/linearLayout2"
                    android:layout_width="115dp"
                    android:layout_height="92dp"
                    android:layout_marginEnd="16dp"
                    android:background="#60CFDF"
                    android:orientation="vertical">
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/baseline_document_scanner_24" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="16dp"
                        android:text="Documents"
                        android:textAlignment="center"
                        android:textAppearance="?attr/textAppearanceBodyMedium"
                        android:textColor="?android:attr/textColorSecondary"
                        android:textStyle="bold" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="98 files"
                        android:textAlignment="center"
                        android:textAppearance="?attr/textAppearanceBodyMedium"
                        android:textStyle="bold" />
                </LinearLayout>


                <!--    Categories Section -> Videos File Component Layout-->
                <LinearLayout
                    android:id="@+id/linearLayout3"
                    android:layout_width="115dp"
                    android:layout_height="92dp"
                    android:background="#E689B2"
                    android:orientation="vertical">
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/baseline_emergency_recording_24" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="16dp"
                        android:text="Videos"
                        android:textAlignment="center"
                        android:textAppearance="?attr/textAppearanceBodyMedium"
                        android:textColor="?android:attr/textColorSecondary"
                        android:textStyle="bold" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="20 files"
                        android:textAlignment="center"
                        android:textAppearance="?attr/textAppearanceBodyMedium"
                        android:textStyle="bold" />
                </LinearLayout>
            </LinearLayout>


            <!--    File Section Title Text-->
            <TextView
                android:id="@+id/textView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="Files"
                android:textAlignment="viewStart"
                android:textColor="#06367A"
                android:textSize="16sp"
                android:textStyle="bold" />

            <!--Horizontal Layout For Files -->
            <LinearLayout
                android:layout_width="789dp"
                android:layout_height="92dp"
                android:layout_marginTop="8dp"
                android:orientation="horizontal">


                <!--  File Section -> Work File Component Layout  -->
                <LinearLayout
                    android:id="@+id/linearLayout4"
                    android:layout_width="115dp"
                    android:layout_height="92dp"
                    android:layout_marginEnd="16dp"
                    android:background="#FFFFFF"
                    android:orientation="vertical">
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/baseline_dehaze_24" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="16dp"
                        android:text="Work"
                        android:textAlignment="center"
                        android:textAppearance="?attr/textAppearanceBodyMedium"
                        android:textColor="?android:attr/textColorSecondary"
                        android:textStyle="bold" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="820 files"
                        android:textAlignment="center"
                        android:textAppearance="?attr/textAppearanceBodyMedium"
                        android:textStyle="bold" />
                </LinearLayout>


                <!-- File Section -> Personal File Component Layout  -->
                <LinearLayout
                    android:id="@+id/linearLayout5"
                    android:layout_width="115dp"
                    android:layout_height="92dp"
                    android:layout_marginEnd="16dp"
                    android:background="#FFFFFF"
                    android:orientation="vertical">
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/baseline_co_present_24" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="16dp"
                        android:text="Personal"
                        android:textAlignment="center"
                        android:textAppearance="?attr/textAppearanceBodyMedium"
                        android:textColor="?android:attr/textColorSecondary"
                        android:textStyle="bold" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="115 files"
                        android:textAlignment="center"
                        android:textAppearance="?attr/textAppearanceBodyMedium"
                        android:textStyle="bold" />
                </LinearLayout>


                <!--    File Section -> Archive File Component Layout-->
                <LinearLayout
                    android:id="@+id/linearLayout6"
                    android:layout_width="115dp"
                    android:layout_height="92dp"
                    android:background="#FFFFFF"
                    android:orientation="vertical">
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/baseline_archive_24" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="16dp"
                        android:text="Archive"
                        android:textAlignment="center"
                        android:textAppearance="?attr/textAppearanceBodyMedium"
                        android:textColor="?android:attr/textColorSecondary"
                        android:textStyle="bold" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="21 files"
                        android:textAlignment="center"
                        android:textAppearance="?attr/textAppearanceBodyMedium"
                        android:textStyle="bold" />
                </LinearLayout>


                <!--File Section -> Add File Component Layout-->
                <LinearLayout
                    android:id="@+id/linearLayout7"
                    android:layout_width="115dp"
                    android:layout_height="92dp"
                    android:layout_marginLeft="16dp"
                    android:background="#99F4F1F1"
                    android:orientation="vertical" >
                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="#99F4F1F1"
                        android:src="@drawable/baseline_add_24" />
                </LinearLayout>
            </LinearLayout>


            <!--    Recent Files Section Title Text-->
            <TextView
                android:id="@+id/textView3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="Recent files"
                android:textAlignment="viewStart"
                android:textColor="#06367A"
                android:textSize="16sp"
                android:textStyle="bold" />


            <!--List Items Component Layout -->
            <ListView
                android:id="@+id/listview"
                android:layout_width="match_parent"
                android:layout_height="230dp"
                android:layout_marginTop="8dp"
                android:divider="@android:color/transparent"
                android:dividerHeight="10.0dp"
                android:scrollbars="vertical"
                tools:listitem="@layout/list_item" /> <!--List Item Designing Layout Page-->
        </LinearLayout>

    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>
