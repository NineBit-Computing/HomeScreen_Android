<?xml version="1.0" encoding="utf-8"?>
<!--ADDED SCROLL VIEW COMPONENT-->
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">


    <!--Portrait View Layout -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#DCE7F6"
        android:clipToPadding="false">


        <!-- Search Bar Component Layout -->
        <com.google.android.material.search.SearchBar
            android:id="@+id/search_bar"
            android:layout_width="384dp"
            android:layout_height="38dp"
            android:layout_marginTop="24dp"
            android:hint="Search"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.516"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />


        <!--    Categories Title Text-->
        <TextView
            android:id="@+id/textView"
            android:layout_width="82dp"
            android:layout_height="29dp"
            android:layout_marginTop="16dp"
            android:text="Categories"
            android:textAlignment="viewStart"
            android:textColor="#06367A"
            android:textSize="16sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.033"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/search_bar" />


        <!--  Categories Section -> Pictures File Component Layout  -->
        <LinearLayout
            android:id="@+id/linearLayout1"
            android:layout_width="115dp"
            android:layout_height="92dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="12dp"
            android:background="#9E9DE8"
            android:orientation="vertical"
            app:layout_constraintBottom_toTopOf="@+id/textView2"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView"
            app:layout_constraintVertical_bias="0.055">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/baseline_camera_alt_24" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="Pictures"
                android:textAlignment="center"
                android:textAppearance="?attr/textAppearanceBodyMedium"
                android:textColor="?android:attr/textColorSecondary"
                android:textStyle="bold" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="480 files"
                android:textAlignment="center"
                android:textAppearance="?attr/textAppearanceBodyMedium"
                android:textStyle="bold" />
        </LinearLayout>


        <!--    Categories Section -> Documents File Component Layout-->
        <LinearLayout
            android:id="@+id/linearLayout2"
            android:layout_width="115dp"
            android:layout_height="92dp"
            android:layout_marginStart="24dp"
            android:layout_marginTop="12dp"
            android:background="#60CFDF"
            android:orientation="vertical"
            app:layout_constraintBottom_toTopOf="@+id/textView2"
            app:layout_constraintEnd_toStartOf="@+id/linearLayout3"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toEndOf="@+id/linearLayout1"
            app:layout_constraintTop_toBottomOf="@+id/textView"
            app:layout_constraintVertical_bias="0.081">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/baseline_document_scanner_24" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="Documents"
                android:textAlignment="center"
                android:textAppearance="?attr/textAppearanceBodyMedium"
                android:textColor="?android:attr/textColorSecondary"
                android:textStyle="bold" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="98 files"
                android:textAppearance="?attr/textAppearanceBodyMedium"
                android:textStyle="bold" />
        </LinearLayout>


        <!--    Categories Section -> Videos File Component Layout-->
        <LinearLayout
            android:id="@+id/linearLayout3"
            android:layout_width="115dp"
            android:layout_height="92dp"
            android:layout_marginTop="12dp"
            android:layout_marginEnd="12dp"
            android:background="#E689B2"
            android:orientation="vertical"
            app:layout_constraintBottom_toTopOf="@+id/textView2"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView"
            app:layout_constraintVertical_bias="0.081">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/baseline_emergency_recording_24" />
            <TextView
                android:layout_width="58dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="Videos"
                android:textAppearance="?attr/textAppearanceBodyMedium"
                android:textColor="?android:attr/textColorSecondary"
                android:textStyle="bold" />
            <TextView
                android:layout_width="58dp"
                android:layout_height="wrap_content"
                android:text="20 files"
                android:textAppearance="?attr/textAppearanceBodyMedium"
                android:textStyle="bold" />
        </LinearLayout>


        <!--    File Section Title Text-->
        <TextView
            android:id="@+id/textView2"
            android:layout_width="96dp"
            android:layout_height="25dp"
            android:layout_marginTop="140dp"
            android:text="Files"
            android:textAlignment="viewStart"
            android:textColor="#06367A"
            android:textSize="16sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.048"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView" />


        <!--  File Section -> Work File Component Layout  -->
        <LinearLayout
            android:id="@+id/linearLayout4"
            android:layout_width="77dp"
            android:layout_height="83dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="20dp"
            android:background="#FFFFFF"
            android:orientation="vertical"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView2">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/baseline_dehaze_24" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="Work"
                android:textAlignment="center"
                android:textAppearance="?attr/textAppearanceBodyMedium"
                android:textColor="?android:attr/textColorSecondary"
                android:textStyle="bold" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="820 files"
                android:textAlignment="center"
                android:textAppearance="?attr/textAppearanceBodyMedium"
                android:textStyle="bold" />
        </LinearLayout>


        <!-- File Section -> Personal File Component Layout  -->
        <LinearLayout
            android:id="@+id/linearLayout5"
            android:layout_width="83dp"
            android:layout_height="83dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="13dp"
            android:background="#FFFFFF"
            android:orientation="vertical"
            app:layout_constraintEnd_toStartOf="@+id/linearLayout6"
            app:layout_constraintStart_toEndOf="@+id/linearLayout4"
            app:layout_constraintTop_toBottomOf="@+id/textView2">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/baseline_co_present_24" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="Personal"
                android:textAlignment="center"
                android:textAppearance="?attr/textAppearanceBodyMedium"
                android:textColor="?android:attr/textColorSecondary"
                android:textStyle="bold" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="115 files"
                android:textAlignment="center"
                android:textAppearance="?attr/textAppearanceBodyMedium"
                android:textStyle="bold" />
        </LinearLayout>


        <!--    File Section -> Archive File Component Layout-->
        <LinearLayout
            android:id="@+id/linearLayout6"
            android:layout_width="83dp"
            android:layout_height="83dp"
            android:layout_marginStart="112dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="21dp"
            android:background="#FFFFFF"
            android:orientation="vertical"
            app:layout_constraintEnd_toStartOf="@+id/linearLayout7"
            app:layout_constraintStart_toEndOf="@+id/linearLayout4"
            app:layout_constraintTop_toBottomOf="@+id/textView2">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/baseline_archive_24" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="Archive"
                android:textAlignment="center"
                android:textAppearance="?attr/textAppearanceBodyMedium"
                android:textColor="?android:attr/textColorSecondary"
                android:textStyle="bold" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="21 files"
                android:textAlignment="center"
                android:textAppearance="?attr/textAppearanceBodyMedium"
                android:textStyle="bold" />

        </LinearLayout>


        <!--File Section -> Add File Component Layout-->
        <LinearLayout
            android:id="@+id/linearLayout7"
            android:layout_width="83dp"
            android:layout_height="83dp"
            android:layout_marginStart="216dp"
            android:layout_marginTop="20dp"
            android:background="#99F4F1F1"
            android:orientation="vertical"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/linearLayout4"
            app:layout_constraintTop_toBottomOf="@+id/textView2">
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/baseline_add_24" />
        </LinearLayout>


        <!--    Recent Files Section Title Text-->
        <TextView
            android:id="@+id/textView3"
            android:layout_width="89dp"
            android:layout_height="23dp"
            android:layout_marginTop="32dp"
            android:text="Recent files"
            android:textAlignment="viewStart"
            android:textColor="#06367A"
            android:textSize="16sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.04"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/linearLayout4" />


        <!--List Items Component Layout -->
        <ListView
            android:id="@+id/listview"
            android:layout_width="410dp"
            android:layout_height="279dp"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="125dp"
            android:divider="@android:color/transparent"
            android:dividerHeight="10.0dp"
            android:scrollbars="vertical"
            app:layout_constraintBottom_toTopOf="@+id/bottom_navigation_view"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView3"
            app:layout_constraintVertical_bias="0.0"
            tools:listitem="@layout/list_item" />  <!--List Item Designing Layout Page-->


        <!-- Bottom Navigation Bar Component -->
        <com.google.android.material.bottomnavigation.BottomNavigationView
            android:id="@+id/bottom_navigation_view"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:background="?android:attr/windowBackground"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:menu="@menu/nav_menu" />
    </androidx.constraintlayout.widget.ConstraintLayout>

</ScrollView>
